<% error = @product.errors.key?(:category) && @product.errors[:category].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :category, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_area :category, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:category) : "Ex: a simple text" %></span>
  </div>
</fieldset>
